<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Setup Your Game</h1>
    <p class="text-center">Setup your first game and start playing!</p>
    <div class="well">
      <%= form_for @game, url: user_game_path do |f| %>
        <div class="form-group">
          <%= f.label :gamename %>
          <%= f.text_field :gamename, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.submit "Setup Game", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>